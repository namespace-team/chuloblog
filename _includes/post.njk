---
layout: default
---

  <article class="post">
    <div class="title">
      <h2>
        {{ title }}
      </h2>
      <!-- <p>Lorem ipsum dolor amet nullam consequat etiam feugiat</p> -->
    </div>
    <div class="meta">
        <i class="fa-solid fa-pen-nib"></i>
        <small class="name">
          <a href="{{ '/' | url }}authors/{{ author }}" class="author">
            {{ fullname  | capitalize}}
          </a>
        </small>
        <span class="date">
          <i class="fa-regular fa-calendar"></i>
          <small class="author">{{ date | dateFormat }}</small>
        </span>
      </div>
    <span class="image featured">
      <img src="images/pic01.jpg" alt="" />
    </span>
    <p>{{ content | safe }}</p>



    <div></div>
  </article>
